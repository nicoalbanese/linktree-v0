datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  name     String?
  pages Page[]
}

model Page {
  id        String      @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  // props here
  title String
  description String?
  user User @relation(fields: [userId], references: [id])
  userId String
  links Link[]
}

model Link {
  id        String      @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  // props here
  title String
  url String
  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade )
  pageId String
}

